<% title "Login" %>
<fieldset>
	<legend>Enter Your Login Details</legend>
	<% form_for :user_session do |f| %>
		<%= f.error_messages %>
		<div class="form_row">
			<%= f.label :login %>
			<%= f.text_field :login %>
		</div>
		<br />
		<div class="form_row">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<br />
		<div class="form_row">
			<%= f.check_box :remember_me %><%= f.label :remember_me %><br />
		</div>
		<br />
		<%= f.submit "Login" %>
	<% end %>
</fieldset>

<p>  
  Forgot your screen name or password? 
  <%= link_to "Remind Me!", :controller => "users", :action => "new" %>
</p>

<p>  
  Not registered yet?  <%= link_to "Register now!", register_path %>
</p>