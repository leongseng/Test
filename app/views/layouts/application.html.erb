<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->    
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
  <%= stylesheet_link_tag 'application', :media => 'screen' %>
  <%= formtastic_stylesheet_link_tag %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="top-menu">
	  <div id="account">
		<% if current_user %>
		  <%= link_to "My Profile", users_path %> |
		  <%= link_to "Logout", logout_path %>
		<% else %>
	      <%= link_to "Register", register_path %> |
	      <%= link_to "Login", login_path %>
	  	<% end %>
	  </div>
	</div>
	<div id="header">
	  <h1>iHR Portal</h1>
	</div>
	<div id="tabsD">
		<ul>
			 <!-- CSS Tabs -->
			 <li><a href="Profile.html"><span>Profile</span></a></li>
			 <li><a href="Products.html"><span>Leave</span></a></li>
			 <li id="current"><a href="Services.html"><span>Services</span></a></li>
			 <li><a href="Support.html"><span>Claim</span></a></li>
			 <li><a href="Order.html"><span>Performance</span></a></li>
			 <li><a href="News.html"><span>Reports</span></a></li>
		</ul>
	</div>
	<div id="container">
		<div id="leftsidebar">
			<ul>
				<li><%= link_to root_url %></li>
				<li><%= link_to users_path %></li>
				<li><%= link_to employees_path %></li>
			</ul>
		</div>
	    <div id="mainpage">
			<%= content_tag :h2, yield(:title) if show_title? %>
			<% flash.each do |name, msg| %>
		      <%= content_tag :div, msg, :id => "flash_#{name}" %>
		    <% end %>
			<%= yield %>
		</div>
	</div>
	<div id="footer">
	    Maintained by Ong Leong Seng (Part-Time Programmer), IHiS Pte Ltd&copy; 2010
	</div>
</body>
</html>
